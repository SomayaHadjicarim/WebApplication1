                    </svg>
                </figure>
            </div>
    
            <div class="col-lg-7 contact-form__wrapper p-5 order-lg-1">
                <form action="@Url.Action("ConnectToMikrotik", "Home")" method="post" class="contact-form form-validate" novalidate="novalidate">
                    <div class="row">
                        <div class="col-sm-12 mb-3">
                            <label class="required-field" for="mikrotikIpAddress">Mikrotik IP Address</label>
                            <input type="text" class="form-control" id="mikrotikIpAddress" name="ipAddress">
                        </div>

                        <div class="col-sm-12 mb-3">
                            <label class="required-field" for="mikrotikUsername">Mikrotik Username</label>
                            <input type="text" class="form-control" id="mikrotikUsername" name="username">
                        </div>

                        <div class="col-sm-12 mb-3">
                            <label class="required-field" for="mikrotikPassword">Mikrotik Password</label>
                            <input type="password" class="form-control" id="mikrotikPassword" name="password">
                        </div>

                        <div class="col-sm-12 mb-3">
                            <button type="submit" name="submit" class="btn btn-primary">Connect to Mikrotik</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- End Contact Form Wrapper -->
    
        </div>
    </div>
</div>


@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script>
        // Display the message as an alert
        alert('@ViewBag.Message');
    </script>
}