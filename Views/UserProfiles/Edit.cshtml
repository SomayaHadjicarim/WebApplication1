@model WebApplication1.Models.UserProfile

@{
    ViewBag.Title = "Edit User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-4">
    <h2>Edit User Profile</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="EditOnMikrotik" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="@Model.Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label for="rateLimit">Rate Limit:</label>
            <input type="text" id="rateLimit" name="rateLimit" value="@Model.RateLimit" class="form-control" />
        </div>
        <!-- Add other fields as needed -->

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
