<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mikrotik Hotspot</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.UtcNow.Ticks.ToString()" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">


</head>
<body>
    <div class="sidemain">
        <div class="container-fluid sidebar row bg-dark">
            <div class="col-auto px-sm-2 px-0">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Bandwidth Management</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center  align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "SimpleQueues")" class="nav-link align-middle px-0 text-white @(Context.Request.Path == "/SimpleQueues" ? "active" : "")">
                                <i class="fs-4 bi bi-router-fill"></i><span class="ms-1 d-none d-sm-inline">Simple Queue</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Active")" class="nav-link align-middle px-0 text-white @(Context.Request.Path == "/Active" ? "active" : "")">
                                <i class="fs-4 bi bi-person-check-fill"></i><span class="ms-1 d-none d-sm-inline">Active</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Users")" class="nav-link align-middle px-0 text-white @(Context.Request.Path == "/Users" ? "active" : "")">
                                <i class="fs-4 bi bi-people"></i><span class="ms-1 d-none d-sm-inline">Users</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "UserProfiles")" class="nav-link align-middle px-0 text-white @(Context.Request.Path == "/UserProfiles" ? "active" : "")">
                                <i class="fs-4 bi bi-person-lines-fill"></i><span class="ms-1 d-none d-sm-inline">User Profiles</span>
                            </a>
                        </li>
                       @*@ <li class="nav-item">
                            <a href="@Url.Action("Index", "AboutUs")" class="nav-link align-middle px-0 text-white @(Context.Request.Path == "/AboutUs" ? "active" : "")">
                                <i class="fs-4 bi bi-person-lines-fill"></i><span class="ms-1 d-none d-sm-inline">About Us</span>
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link align-middle px-0 text-white" asp-controller="Home" asp-action="Logout">
                                <i class="fs-4 bi bi-router-fill"></i><span class="ms-1 d-none d-sm-inline">Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <div class="footer border-top text-muted">
        &copy; 2024 - Mikrotik Bandwidth - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
